    type="button"
    value="open"
    onClick={this.openModal}
  >
    <Modal visible={visible} width="300" height="300" effect="fadeInUp" onClickAway={() => this.closeModal}>
      <div>
        <h1>Delete Post</h1>
        <p>Do you want to delete this post?</p>
        <Link href="" onClick={() => this.closeModal}>Close</Link>
      </div>
    </Modal>
